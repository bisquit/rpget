{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":timezone(Asia/Tokyo)", "group:allNonMajor", ':automergeMinor'],
  "enabledManagers": ["npm"],
  "schedule": ["after 10:00 and before 22:00"],
