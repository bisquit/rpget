{
  "name": "rpget",
  "description": "Download files from a repository url",
  "version": "0.2.1",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "rpget": "./dist/index.js"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "RPGET_MODE=DEBUG tsx src/index.ts",
    "build": "tsup src/index.ts --format esm --clean",
    "build:debug": "pnpm build --env.RPGET_MODE=DEBUG",
    "test": "vitest",
    "test:ci": "vitest run",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit && echo 'Type checking passed!'",
    "validate": "run-p lint typecheck --print-label --continue-on-error",
    "release": "bumpp"
  },
  "dependencies": {
    "@clack/prompts": "^0.6.3",
    "cleye": "^1.3.2",
    "decompress": "^4.2.1",
    "execa": "^7.1.1",
    "magic-regexp": "^0.7.0",
    "picocolors": "^1.0.0",
    "tempy": "^3.0.0"
  },
  "devDependencies": {
    "@types/decompress": "^4.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "bumpp": "^9.1.1",
    "eslint": "^8.41.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "tsup": "^6.7.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3",
    "vitest": "^0.31.4"
  },
  "prettier": {
    "editorconfig": true,
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2020": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-non-null-assertion": 0,
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bisquit/rpget.git"
  },
  "bugs": {
    "url": "https://github.com/bisquit/rpget/issues"
  },
  "keywords": [
    "cli",
    "download",
    "repo",
    "repository",
    "github",
    "gitlab"
  ]
}
